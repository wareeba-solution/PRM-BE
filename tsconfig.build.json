  "compilerOptions": {
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": [],
    "sourceMap": false,
    "removeComments": true,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}