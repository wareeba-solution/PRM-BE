FREESWITCH_PASSWORD=${FREESWITCH_PASSWORD}

# Dratchio Configuration
DRATCHIO_API_KEY=${DRATCHIO_API_KEY}
DRATCHIO_API_SECRET=${DRATCHIO_API_SECRET}
DRATCHIO_SIP_SERVER=${DRATCHIO_SIP_SERVER}
DRATCHIO_SIP_USERNAME=${DRATCHIO_SIP_USERNAME}
DRATCHIO_SIP_PASSWORD=${DRATCHIO_SIP_PASSWORD}

# Default Caller ID for outbound calls
DEFAULT_CALLER_ID=${DEFAULT_CALLER_ID}

# Clinic Phone Number
CLINIC_PHONE_NUMBER=${CLINIC_PHONE_NUMBER} 