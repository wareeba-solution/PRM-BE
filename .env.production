# Mail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-production-email@gmail.com
MAIL_PASSWORD=your-production-app-specific-password
MAIL_FROM=noreply@your-production-domain.com
MAIL_TRANSPORT=smtp

# SMS
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-production-twilio-account-sid
SMS_AUTH_TOKEN=your-production-twilio-auth-token
SMS_FROM_NUMBER=your-production-twilio-phone-number

# Storage
STORAGE_TYPE=s3
AWS_ACCESS_KEY_ID=your-production-aws-access-key
AWS_SECRET_ACCESS_KEY=your-production-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-production-bucket-name

# Push Notifications
FIREBASE_PROJECT_ID=your-production-firebase-project-id
FIREBASE_PRIVATE_KEY=your-production-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-production-firebase-client-email

# Monitoring
