# Application
APP_NAME=Patient Relationship Manager
APP_VERSION=1.0.0
NODE_ENV=production
PORT=3000
API_PREFIX=/api
CORS_ORIGINS=https://your-production-domain.com
THROTTLE_TTL=60
THROTTLE_LIMIT=100
MEMORY_THRESHOLD=0.9

# Database
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=your-production-db-username
DB_PASSWORD=your-production-db-password
DB_NAME=prm_db
DB_SCHEMA=public
DB_SYNC=false
DB_LOGGING=false
DB_SSL=true

# Redis
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-production-redis-password
REDIS_DB=0
REDIS_KEY_PREFIX=prm:
REDIS_CONNECTION_TIMEOUT=10000
REDIS_DISABLED=false

# JWT
JWT_SECRET=17b069473ec9325dc41fa3864c719912925870a0772897bf58f7533461e31a6404f48eef894b9bb0966e2ec312ebbe112f08df3aa3722d21b90ca6af995bb136
JWT_EXPIRATION=15m
